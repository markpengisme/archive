<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.adventcalendar">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- The manifest entry for the MainActivity -->
        <activity android:name="com.example.android.adventcalendar.MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AddTaskActivity -->
        <activity
            android:name="com.example.android.adventcalendar.AddTaskActivity"
            android:label="@string/add_task_activity_name" />
        <!-- UpdateTaskActivity -->
        <activity
            android:name="com.example.android.adventcalendar.UpdateTaskActivity"
            android:label="@string/add_task_activity_name" />
        <!-- Register the TaskContentProvider -->
        <!-- Set name, authorities, and exported attributes -->
        <!-- exported = false limits access to this ContentProvider to only this app -->
        <provider
            android:name="com.example.android.adventcalendar.data.TaskContentProvider"
            android:authorities="com.example.android.adventcalendar"
            android:exported="false"/>

    </application>

</manifest>